<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">{{ title }} List</h1>
  </div>
  <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        DataTables Advanced Tables
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
          <thead>
            <tr>
              {{!--
                products list with action col on header
              --}}
              {{#if products}}
                <th>#</th>
                <th>Name</th>
                <th>Thumbnail</th>
                <th>Description</th>
                <th>Category ID</th>
                <th>Sale Price</th>
                <th>Original Price</th>
                <th>Product Images</th>
                <th>Action</th>
              {{/if}}

              {{!-- categories --}}
              {{#if categories}}
                <th>ID</th>
                <th>Name</th>
                <th>Icon Name</th>
                <th>Description</th>
              {{/if}}

              {{!-- users --}}
              {{#if users}}
                <th>ID</th>
                <th>Avatar</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>DoB</th>
                <th>Email</th>
                <th>Email Verified</th>
                <th>Role</th>
                <th>Phone Number</th>
                <th>Username</th>
                <th>Gender</th>
                <th>Zip Code</th>
                <th>Country</th>
              {{/if}}
            </tr>
          </thead>
          <tbody>
            {{!--
              products list with action button link to detail
            --}}
            {{#if products}}
              {{#each productsArr}}
              <tr>
                <td>{{inc @index}}</td>
                <td>{{ name }}</td>
                <td><img src="{{ thumbnail }}" alt="{{ name }}" width="100"></td>
                <td>{{ shortDescription }}</td>
                <td>{{ categoryId }}</td>
                <td class="text-right">{{ salePrice }}</td>
                <td class="text-right">{{ originalPrice }}</td>
                <td>
                  {{#each thumbnails}}
                  <img src="{{ this }}" width="100">
                  {{/each}}
                </td>
                <td class="text-center"><a class="btn btn-outline btn-default btn-xs" href="products/{{ id }}">Detail</a></td>
              </tr>
              {{/each}}
            {{/if}}

            {{!-- categories --}}
            {{#if categories}}
              {{#each categoriesArr}}
              <tr>
                <td>{{ _id }}</td>
                <td>{{ name }}</td>
                <td>{{ iconName }}</td>
                <td>{{ descriptions }}</td>
              </tr>
              {{/each}}
            {{/if}}

            {{!-- users --}}
            {{#if users}}
              {{#each usersArr as |i key|}} {{!-- body is array --}}
              <tr>
                {{#if i }}
                <td>{{ id }}</td>
                <td><img src="{{ avatar }}" alt="{{ lastName }} {{ firstName }}" width="50"></td>
                <td>{{ firstName }}</td>
                <td>{{ lastName }}</td>
                <td>{{ dob }}</td>
                <td>{{ email }}</td>
                <td>{{ emailVerified }}</td>
                <td>{{ role }}</td>
                <td class="text-right">{{ phoneNumber }}</td>
                <td>{{ username }}</td>
                <td>{{ gender }}</td>
                <td class="text-right">{{ zipcode }}</td>
                <td>{{ country }}</td>
                {{/if}}
              </tr>
              {{/each}}
            {{/if}}
          </tbody>
        </table>
        <!-- /.table-responsive -->
      </div>
      <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
  </div>
  <!-- /.col-lg-12 -->
</div>
