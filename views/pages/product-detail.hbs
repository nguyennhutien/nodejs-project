<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">{{ title }}</h1>
  </div>
  <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        DataTables Advanced Tables
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
          <thead>
            <tr>
              <th>Key</th>
              <th>Value</th>
            </tr>
          </thead>
          <tbody>
            {{#with product}}
            <tr>
              <td>ID</td>
              <td>{{ id }}</td>
            </tr>
            <tr>
              <td>Name</td>
              <td>{{ name }}</td>
            </tr>
            <tr>
              <td>Image</td>
              <td><img src="{{ image }}" alt="{{ name }}"></td>
            </tr>
            <tr>
              <td>Thumbnail</td>
              <td><img src="{{ thumbnail }}" alt="{{ name }} Thumbnail" width="100"></td>
            </tr>
            <tr>
              <td>Description</td>
              <td>{{ shortDescription }}</td>
            </tr>
            <tr>
              <td>Category</td>
              <td>{{ category }}</td>
            </tr>
            <tr>
              <td>Sale Price</td>
              <td>{{ salePrice }}</td>
            </tr>
            <tr>
              <td>Original Price</td>
              <td>{{ originalPrice }}</td>
            </tr>
            <tr>
              <td>Images</td>
              <td>
                {{#each images}}
                <img src="{{ this }}">
                {{/each}}
              </td>
            </tr>
            <tr>
              <td>Thumbnails</td>
              <td>
                {{#each thumbnails}}
                <img src="{{ this }}" width="100">
                {{/each}}
              </td>
            </tr>
            {{/with}}
          </tbody>
        </table>
        <!-- /.table-responsive -->
      </div>
      <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
  </div>
  <!-- /.col-lg-12 -->
</div>
