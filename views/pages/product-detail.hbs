<div class="row">
  <div class="col-lg-12">
    <div class="header-bar page-header">
      <h1 class="">{{ title }}</h1>
      <a class="header-bar__btn btn btn-success" href=""><i class="fa fa-plus"></i> Create new product</a>
    </div>
  </div>
  <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
  <div class="col-lg-12">

    {{#with product}}
  	<form action="/user" method="POST" enctype="multipart/form-data">
  		<div class="form-group row">
  			<label class="col-sm-2 col-form-label">Name</label>
  			<div class="col-sm-10">
  				<input type="text" class="form-control" name="name" value="{{ name }}"></input>
  			</div>
  		</div>
  		<div class="form-group row">
  			<label class="col-sm-2 col-form-label">Image</label>
  			<div class="col-sm-10">
          <img src="{{ image }}" alt="{{ name }}" />
  			</div>
  		</div>
  		<div class="form-group row">
  			<label class="col-sm-2 col-form-label">Thumbnail</label>
  			<div class="col-sm-10">
  				<img src="{{ thumbnail }}" alt="{{ name }} Thumbnail" width="100" />
  			</div>
  		</div>
  		<div class="form-group row">
  			<label class="col-sm-2 col-form-label">Description</label>
  			<div class="col-sm-10">
  				<textarea class="form-control" name="shortDescription" cols="30" rows="3">{{ shortDescription }}</textarea>
  			</div>
  		</div>
  		<div class="form-group row">
  			<label class="col-sm-2 col-form-label">Category</label>
  			<div class="col-sm-10">
          {{!-- <select class="custom-select" name="category">
            {{#each categoriesArr}}
  					<option value="{{ name }}">{{ name }}</option>
            {{/each}}
  				</select> --}}
          <select class="custom-select" name="category">
  					<option value="{{ category }}">{{ category }}</option>
  				</select>
  			</div>
  		</div>
      <div class="form-group row">
  			<label class="col-sm-2 col-form-label">Sale Price</label>
  			<div class="col-sm-10">
  				<input type="text" class="form-control" name="salePrice" value="{{ salePrice }}"></input>
  			</div>
  		</div>
      <div class="form-group row">
  			<label class="col-sm-2 col-form-label">Original Price</label>
  			<div class="col-sm-10">
  				<input type="text" class="form-control" name="originalPrice" value="{{ originalPrice }}"></input>
  			</div>
  		</div>
      <div class="form-group row">
  			<label class="col-sm-2 col-form-label">Images</label>
  			<div class="col-sm-10">
  				{{#each images}}
          <img src="{{ this }}">
          {{/each}}
  			</div>
  		</div>
      <div class="form-group row">
  			<label class="col-sm-2 col-form-label">Thumbnails</label>
  			<div class="col-sm-10">
  				{{#each thumbnails}}
          <img src="{{ this }}" width="100">
          {{/each}}
  			</div>
  		</div>
  		<button type="submit" class="btn btn-primary">Submit</button>
  	</form>
    {{/with}}

  </div>
  <!-- /.col-lg-12 -->
</div>
